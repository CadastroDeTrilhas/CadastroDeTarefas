<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>

<br>
<div class="container" style="background-color: #ffffff;">
    <br>
    <h1>Administradores</h1><br>
    <a href="/admin/admin/new" class="btn btn-primary">Cadastrar novo administrador</a>
    <hr>

    <div class="container">

        <% admins.forEach(admin => { %>

            <div class="card">

                <div class="card-header">
                    <h2><%= admin.name %></h2>
                </div>

                <div class="card-body">
                    <a href="/admin/admin/view/<%= admin.id %>" class="btn btn-primary">Ver admin</a>
                    <a href="/admin/admin/delete/<%= admin.id %>" class="btn btn-danger">Apagar</a>
                </div>
            </div>
            <br>
        <% }) %>   

    </div>
    
</div>

<%- include ('../../partials/footer.ejs') %>