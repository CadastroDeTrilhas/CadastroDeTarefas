<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>

<br>
<div class="container" style="background-color: #ffffff;">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de tarefas</h2>
        </div>
        <div class="card-body">
            <form ref='uploadForm' id='uploadForm' action='/admin/tasks/upload' method='post' encType="multipart/form-data">

                <% if(num == 0){ %>
                    <input type="text" class="form-control" name="number" placeholder="Numero da tarefa"><br>
                <% } else{ %>
                    <input type="text" class="form-control" name="number" value="<%= num %>"><br>
                <% } %>

                <input type="file" name="file" >

                <br><hr><br><label>NÃ­vel</label>
                <select name="level" class="form-control">
                    <% levels.forEach((level) => { %>
                        <% if(level.id == levelId){ %>
                            <option value="<%= level.id %>"><%= level.title %></option>
                        <%}%>
                    <% }) %>
                    <% levels.forEach((level) => { %>
                        <% if(level.id != levelId){ %>
                            <option value="<%= level.id %>"><%= level.title %></option>
                        <% } %>
                    <% }) %>
                </select>
                
                <br><label>MatÃ©ria</label>
                <select name="sub" class="form-control">
                    <% subjects.forEach((subject) => { %>
                        <% if(subject.id == subjectId){ %>
                            <option value="<%= subject.id %>"><%= subject.title %></option>
                        <%}%>
                    <% }) %>
                    <% subjects.forEach((subject) => { %>
                        <% if(subject.id != subjectId){ %>
                            <option value="<%= subject.id %>"><%= subject.title %></option>
                        <% } %>
                    <% }) %>
                </select>

                <br>
                <input type="hidden" name="levelId" value="<%= levelId %>">
                <input type="hidden" name="pageControl" value="<%= subjectId %>">
                <button class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>
    <br>
</div>

<%- include ('../../partials/footer.ejs') %>