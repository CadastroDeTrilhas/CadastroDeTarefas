<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>

<br>
<div class="container" style="background-color: #ffffff;">

    <br>
    <h1><%= tasks[0].subject.title %></h1><br>

    <form action="/admin/tasks/new" method="post">
        <input type="hidden" name="nextNum" value="<%= tasks.length + 1 %>">
        <input type="hidden" name="sub" value="<%= tasks[0].subject.id %>">
        <button class="btn btn-primary">Criar nova tarefa</button>
    </form>

    <hr>
    
    <div class="container" >

        <nav class="navbar navbar-light navbar-expand-lg" tabindex="" style="background-color: #ddf3f7;">
    
            <ul class="navbar-nav mr-auto">        
        
                <li class="nav-item">
                    <a class="nav-link" href="/admin/students">Todos   |  </a>
                </li>
                <% levels.forEach( level => { %>
                    <li>
                        <a class="nav-link" href="/admin/tasks/<%=tasks[0].subject.id%>/<%=level.id%>"><%= level.title %></a>
                    </li>
                <% }) %> 

            </ul>
        </nav>

        <div class="container" style="background-color: #f0f7f7;">

            <br>

            <% tasks.forEach(task => { %>

                <div class="card">
        
                    <div class="card-header">
                        <h2>Tarefa <%= task.num %> - <%= task.subject.title %> - <%= task.level.title %></h2>
                    </div>
        
                    <div class="card-body">
                        <a href="/admin/task/<%= task.id %>" class="btn btn-primary">Ver tarefa</a>
                    </div>
                </div>
                <br>
            <% }) %> 

        </div>
    </div>
    <hr>
</div>

<%- include ('../../partials/footer.ejs') %>