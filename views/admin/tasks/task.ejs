<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>

<br>
<div class="container" style="background-color: #ffffff;">

    <br>
    <h1>Tarefa <%= task.num %> - <%= subject.title %></h1><br>

    <a href="/admin/task/edit/<%= task.id %>" class="btn btn-primary">Editar</a>

    <form action="/admin/task/delete" method="post" style="display: inline;">
        <input type="hidden" name="level" value="<%= task.levelId %>">
        <input type="hidden" name="id" value="<%= task.id %>">
        <input type="hidden" name="key" value="<%= task.key %>">
        <input type="hidden" name="subId" value="<%= task.subjectId %>">
        <button class="btn btn-danger">Deletar</button>
    </form>
    
    <hr><br>

    <div class="container" align="center">
        <embed src="<%= task.url %>" width="700" height="970" type='application/pdf'>
    </div>
    
    <input type="hidden" name="key">
    <input type="hidden" name="id" value="<%= task.id %>">

</div>

<%- include ('../../partials/footer.ejs') %>