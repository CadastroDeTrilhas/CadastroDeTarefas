<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>


<br>  
<div class="container" style="background-color: #ffffff;">
    <br>
    <h2>Matérias</h2><br>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Matéria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% subjects.forEach(subject => { %>
                <tr>
                    <td><%= subject.title %></td>
                    <td>
                        <a href="/admin/student/planning/<%= studentId %>/<%= subject.id %>/-1" class="btn btn-primary">Tarefas</a>
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>
    <hr>
</div>




