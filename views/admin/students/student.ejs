<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>

<br>
<div class="container" style="background-color: #ffffff;">
    <br>
    <h1><%= student.name %></h1>
    <h5><%= student.email %></h5>
    <hr>

    <form action="/admin/trails/new" method="post" style="display: inline;">
        <input type="hidden" name="studentId" value="<%= student.id %>">
        <button class="btn btn-primary">Cadastrar nova trilha</button>
    </form>

    <hr>

    <div class="container">

        <% trails.forEach(trails => { %>

            <div class="card">
    
                <div class="card-header">
                    <h2>Trilha <%= trails.number %></h2>
                </div>
    
                <div class="card-body">
                    <a href="/admin/trails/<%= trails.id %>" class="btn btn-primary">Ver trilha</a>
                </div>
            </div>
            <br>
        <% }) %> 

    </div>
    
</div>

<%- include ('../../partials/footer.ejs') %>