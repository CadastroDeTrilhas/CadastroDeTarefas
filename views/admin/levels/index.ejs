<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>


<br>  
<div class="container" style="background-color: #ffffff;">
    <br>
    <h2>Níveis</h2><br>
    <form action="/admin/levels/new" method="post">
        <input type="hidden" name="nextNum" value="0">
        <input type="hidden" name="subId" value="0">
        <button class="btn btn-primary">Criar novo nível</button>
    </form>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Níveis</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% levels.forEach(level => { %>
                <tr>
                    <td><%= level.title %></td>
                    <td>
                        <a href="/admin/tasks/<%=level.id%>" class="btn btn-primary">Tarefas</a>
                        <a href="/admin/levels/edit/<%= level.id %>" class="btn btn-primary">Editar</a>

                        <form action="/admin/levels/delete" method="post" style="display: inline;">
                            <input type="hidden" name="id" value="<%= level.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>
    <hr>
</div>




<%- include ('../../partials/footer.ejs') %>