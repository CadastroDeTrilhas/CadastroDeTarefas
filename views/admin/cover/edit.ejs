<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>

<br>
<div class="container" style="background-color: #ffffff;">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Edição de capa</h2>
        </div>
        <div class="card-body">
            <form ref='uploadForm' id='uploadForm' action='/admin/cover/edition' method='post' encType="multipart/form-data">

                <input type="text" class="form-control" name="name" value="<%= cover.name %>"><br>

                <input type="file" name="file" >

                <br>
                <br>
                <input type="hidden" name="oldKey" value="<%= cover.key %>">
                <input type="hidden" name="id" value="<%= cover.id %>">
                <button class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>
    <br>
</div>

