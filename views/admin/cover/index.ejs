<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/adminNavbar.ejs') %>

<br>
<div class="container" style="background-color: #ffffff;">

    <br>
    <h1>Capas</h1><br>
    <form action="/admin/cover/new" method="get">
        <button class="btn btn-primary">Adicionar capa</button>
    </form>
    <hr>
    <br>
    <div class="container">

        <% covers.forEach(cover => { %>

            <div class="card">
    
                <div class="card-header">
                    <h2><%= cover.name %></h2>
                </div>
    
                <div class="card-body">
                    <a href="/admin/cover/view/<%= cover.id %>" class="btn btn-primary">Ver capa</a>
                </div>
            </div>
            <br>
        <% }) %> 

    </div>
    <hr>
</div>

<%- include ('../../partials/footer.ejs') %>